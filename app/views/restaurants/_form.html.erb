<div class="row">
  <%= form_for @restaurant do |f| %>
    <div class="col m6">
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>
    <div class="col m6">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="col m6">
      <%= f.label :street %>
      <%= f.text_field :street, required: true %>
    </div>
    <div class="col m6">
      <%= f.label :city %>
      <%= f.text_field :city, required: true %>
    </div>
    <div class="col m6">
      <%= f.label :state %>
      <%= f.text_field :state, required: true %>
    </div>
    <div class="col m6">
      <%= f.label :postal %>
      <%= f.number_field :postal, required: true %>
    </div>
    <div class="col m6">
      <%= f.label :delivery %>
      <%= f.select :delivery, options_for_select(['Yes', 'No']) %>
    </div>
    <div class="col m6">
      <%= f.label :latitude %>
      <%= f.text_field :latitude %>
    </div>
    <div class="col m6">
      <%= f.label :longitude %>
      <%= f.text_field :longitude %>
    </div>
    <%= f.submit nil, class: 'btn grey darken-2' %>
  <% end %>
</div>
